{
  "app-id": "ch.bailu.gtk-meteo",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "22.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.openjdk11"
  ],
  "command": "gtk-meteo",
  "modules": [
    {
      "name": "openjdk",
      "buildsystem": "simple",
      "build-commands": [
        "/usr/lib/sdk/openjdk11/install.sh"
      ]
    },
    {
      "name": "gtk-weather",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/bailuk/gtk-meteo.git",
          "branch": "dev/flatpak"
        },
        "gradle-sources.json"
      ],
      "build-commands": [
        "pwd",
        "find maven-local",
        "source /usr/lib/sdk/openjdk11/enable.sh && gradle build"
      ]
    }
  ],
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--env=GIO_EXTRA_MODULES=/app/lib/gio/modules",
    "--env=JAVA_HOME=/app/jre",
    "--env=LIBO_FLATPAK=1"
  ],
  "tags": [
    "nightly"
  ]
}
