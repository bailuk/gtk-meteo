{
  "app-id": "ch.bailu.gkt-meteo",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "21.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.openjdk11"
  ],
  "command": "gtk-meteo",
  "modules": [
    {
      "name": "openjdk",
      "buildsystem": "simple",
      "build-commands": [
        "/usr/lib/sdk/openjdk11/install.sh"
      ]
    },
    {
      "name": "gtk-weather",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/bailuk/gtk-meteo.git",
          "branch": "main"
        }
      ],
      "build-commands": [
        "export JAVA_HOME=/app/jre && ./gradlew build"
      ]
    }
  ],
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--device=dri",
    "--filesystem=xdg-config/gtk-3.0",
    "--filesystem=xdg-run/gvfsd",
    "--filesystem=host",
    "--env=GIO_EXTRA_MODULES=/app/lib/gio/modules",
    "--env=JAVA_HOME=/app/jre",
    "--env=LIBO_FLATPAK=1",
    "--own-name=org.libreoffice.LibreOfficeIpc0",
    "--talk-name=org.gtk.vfs.*",
    "--talk-name=com.canonical.AppMenu.Registrar"
  ],
  "tags": [
    "nightly"
  ]
}
