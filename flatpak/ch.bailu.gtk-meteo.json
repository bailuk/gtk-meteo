{
  "app-id": "ch.bailu.gtk-meteo",
  "runtime": "org.gnome.Platform",
  "runtime-version": "43",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.openjdk11"
  ],
  "command": "gtk-meteo.sh",
  "modules": [
    {
      "name": "openjdk",
      "buildsystem": "simple",
      "build-commands": [
        "/usr/lib/sdk/openjdk11/install.sh"
      ]
    },
    {
      "name": "gtk-weather",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/bailuk/gtk-meteo.git",
          "branch": "dev/flatpak"
        },
        "gradle-sources.json"
      ],
      "build-commands": [
        "source /usr/lib/sdk/openjdk11/enable.sh && gradle build",
        "install -Dm644 build/libs/gtk-meteo-all.jar /app/lib/gtk-meteo.jar",
        "install -Dm644 src/main/resources/svg/app-icon.svg /app/share/icons/ch.bailu.gtk-meteo.svg",
        "install -Dm644 flatpak/ch.bailu.gtk-meteo.desktop /app/share/applications/ch.bailu.gtk-meteo.desktop",
        "install -Dm755 ci/flatpak-run-app.sh /app/bin/gtk-meteo.sh"
      ]
    }
  ],
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri",
    "--env=GIO_EXTRA_MODULES=/app/lib/gio/modules",
    "--env=JAVA_HOME=/app/jre",
    "--env=LIBO_FLATPAK=1",
    "--env=PATH=/app/bin:/app/jre/bin"
  ],
  "tags": [
    "nightly"
  ]
}
